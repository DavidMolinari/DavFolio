<section id="contact" class="section section-contact">
    <div class="animate-up">
        <h2 class="section-title">Me contacter</h2>

        <div class="row">
            <div class="col-sm-6">
                <div class="section-box contact-form">
                    <h3>N'hésitez pas à me contacter</h3>

                    {{ form_start(form) }}
                    <div class="input-field">
                        {{ form_widget(form.subject, {'attr': {'class': 'contact-subject'}}) }}
                        <span class="line"></span>

                        {{ form_errors(form.subject) }}
                    </div>
                    <div class="input-field">
                        {{ form_widget(form.nom, {'attr': {'class': 'contact-name'}}) }}
                        <span class="line"></span>

                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="input-field">
                        {{ form_widget(form.email, {'attr': {'class': 'contact-email'}}) }}
                        <span class="line"></span>

                        {{ form_errors(form.email) }}
                    </div>
                    <div class="input-field">
                        {{ form_widget(form.message, {'attr': {'class': 'contact-message'}}) }}

                        {{ form_errors(form.message) }}
                    </div>

                    {# Render CSRF token etc .#}
                    <div style="display:none">
                        {{ form_rest(form) }}
                    </div>
                        <input class="btn btn-lg btn-primary" type="submit" value="Envoyer"/>
                    {{ form_end(form) }}

                </div>
            </div>

            <div class="col-sm-6">
                <div class="section-box contact-info">
                    <ul class="contact-list">
                        <li class="clearfix">
                            <strong>Adresse</strong>
                            <span>{{ dav.numAdresse }} {{ dav.adresse }}, {{ dav.cp }} {{ dav.ville }}, {{ dav.pays }}</span>
                        </li>
                        <li class="clearfix">
                            <strong>phone</strong>
                            <span><a href="tel:+{{ dav.tel }}">{{ dav.tel }}</a></span>
                        </li>
                        <li class="clearfix">
                            <strong>E-mail</strong>
                            <span><a href="mailto:{{ dav.mail }}">{{ dav.mail }}</a></span>
                        </li>
                    </ul>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2911.918484941697!2d5.928198715480765!3d43.127238579142755!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12c91b101d4c9d89%3A0x810d44c24e0aa892!2s3+Rue+Dumont+d&#39;Urville%2C+83000+Toulon!5e0!3m2!1sfr!2sfr!4v1492840493571" width="450" height="250" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</section><!-- #contact -->